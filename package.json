{
  "name": "simplechart",
  "version": "1.0.0",
  "description": "Visualization of existing map based stats",
  "main": "index.tsx",
  "scripts": {
    "dev": "node server.js",
    "start": "nf start",
    "start:dev": "node server.js",
    "start:prod": "cross-env NODE_ENV=production node server.js",
    "build": "next build src",
    "lint": "tslint -c ./tslint.json --force src/**/*.ts src/**/*.tsx",
    "test": "jest --verbose",
    "test:watch": "jest --watchAll --verbose -i",
    "test:coverage": "jest --verbose --coverage",
    "json-server": "json-server --watch ./fake-server/db.json --routes ./fake-server/routes.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lemoncode/simplechart.git"
  },
  "author": "Lemoncode",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lemoncode/simplechart"
  },
  "homepage": "https://github.com/Lemoncode/simplechart#readme",
  "dependencies": {
    "@material-ui/core": "^1.4.1",
    "@zeit/next-typescript": "^1.1.0",
    "babel-polyfill": "^6.26.0",
    "express": "^4.16.3",
    "next": "^6.1.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "@types/deep-freeze": "^0.1.1",
    "@types/enzyme": "^3.1.12",
    "@types/jest": "^23.3.0",
    "@types/material-ui": "^0.21.4",
    "@types/node": "^10.5.2",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/redux-mock-store": "1.0.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^5.2.0",
    "deep-freeze": "0.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "foreman": "^3.0.1",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.4",
    "jest": "^23.4.1",
    "node-sass": "^4.9.2",
    "raf": "^3.4.0",
    "redux-mock-store": "1.5.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "testRegex": "\\.spec\\.tsx?$",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "setupFiles": [
      "<rootDir>/config/test/polyfills.js",
      "<rootDir>/config/test/setupTest.js"
    ],
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "^.+\\.s?css$": "identity-obj-proxy"
    },
    "restoreMocks": true
  }
}
