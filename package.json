{
  "name": "simplechart",
  "version": "1.0.0",
  "description": "Visualization of existing map based stats",
  "main": "index.js",
  "scripts": {
    "build": "next build src",
    "start": "nf start",
    "start:dev": "node server.js",
    "start:prod": "cross-env NODE_ENV=production node server.js",
    "lint": "tslint -c ./tslint.json --force src/**/*.ts src/**/*.tsx",
    "test": "jest --verbose",
    "test:watch": "jest --watchAll --verbose -i",
    "test:coverage": "jest --verbose --coverage",
    "json-server": "json-server --watch ./fake-server/db.json --routes ./fake-server/routes.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lemoncode/simplechart.git"
  },
  "author": "Lemoncode",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lemoncode/simplechart"
  },
  "homepage": "https://github.com/Lemoncode/simplechart#readme",
  "dependencies": {
    "@zeit/next-typescript": "^1.1.0",
    "babel-polyfill": "^6.26.0",
    "express": "^4.16.3",
    "material-ui": "^0.20.0",
    "next": "^6.1.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "@types/deep-freeze": "^0.1.1",
    "@types/enzyme": "^3.1.9",
    "@types/jest": "^22.2.0",
    "@types/material-ui": "^0.20.7",
    "@types/node": "^9.4.6",
    "@types/react": "^16.0.38",
    "@types/react-dom": "^16.0.4",
    "@types/redux-mock-store": "0.0.13",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.3",
    "deep-freeze": "0.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "foreman": "^3.0.1",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.4",
    "jest": "^22.4.2",
    "node-sass": "^4.7.2",
    "raf": "^3.4.0",
    "redux-mock-store": "1.4.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2"
  },
  "jest": {
    "testRegex": "\\.spec\\.tsx?$",
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "setupFiles": [
      "<rootDir>/config/test/polyfills.js",
      "<rootDir>/config/test/setupTest.js"
    ],
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "^.+\\.s?css$": "identity-obj-proxy"
    },
    "restoreMocks": true
  }
}
